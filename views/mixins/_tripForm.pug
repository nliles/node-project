mixin tripForm()
  form.form(action="/trip" method="POST" enctype="multipart/form-data")
    h2 Create a Trip
    label(for="name") Trip Name
    input(type="text" name="name")
    label(for="description") Description
    textarea(name="description")
    label(for="address") Address
    input(type="text" id="address" name="location[address]")
    label(for="lng") Address lng
    input(type="text", id="lng", name="location[coordinates][0]" required)
    label(for="lat") Address Lat
    input(type="text", id="lat", name="location[coordinates][1]" required)
    label(for="photo") Select Images
    input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg" multiple)
    br
    br
    input.button(type="submit" value="Submit")

